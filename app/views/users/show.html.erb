<%= provide(:title, @user.email) %>
<div class="container">
      <div class="row">
      <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
        <%= link_to "Edit User", '#' %>
        <%= link_to "Delete User", '#', method: :delete, data:
        										{ confirm: 'Are you sure?' } %>
       <br>
          <p class=" text-info"><%= Time.now.strftime("%m/%d/%Y") %></p>
      </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 " >
          <% if @user.groups.empty? %>
            <div class="card card-inverse card-danger text-xs-center">
              <div class="card-block">
                <blockquote class="card-blockquote">
                  <p>You are not associated with any businesses.</p>
                <footer><%= link_to "Click here to create an association.", new_business_path(@business) %></footer>
                </blockquote>
              </div>
            </div>
          <% end %>
   
   
          <div class="card">
            <div class="card-header">
              <%= "#{@user.email} Profile" %>
            </div>
            <div class="card-block">
              <div class="row">
                
                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Email:</td>
                        <td><%= @user.email %></td>
                      </tr>
                      <tr>
                        <td>Group Count:</td>
                        <td><%= @user.groups.count %></td>
                      </tr>
 
                    </tbody>
                  </table>
                  
                  <%= link_to 'PLACEHOLDER', '#', class: 'btn btn-primary' %>
                  
                </div>
             
            </div>
                 <div class="panel-footer">
                        <a data-original-title="Email Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                        <span class="pull-right">
                            <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                            <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                        </span>
                    </div>
            
          </div>
        </div>
      </div>
    </div>